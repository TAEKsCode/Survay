<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="test"
            type="com.onix.internship.survay.data.database.tables.test.Test" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/testContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_stroke_background"
        android:padding="@dimen/item_test_layout_padding">

        <TextView
            android:id="@+id/testName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{test.name}"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Test na pidora" />

        <TextView
            android:id="@+id/testDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{test.description}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testName"
            tools:text="Nado proiti etot test maksimalno chesno" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>